<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Qt\Component\Quiztools\Administrator\Field">
    <fieldset name="basic">
        <field
            name="shuffle_answers"
            type="radio"
            label="PLG_QUIZTOOLS_BLANK_FIELD_SHUFFLE_ANSWERS_LABEL"
            layout="joomla.form.field.radio.switcher"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="options">
        <field
            name="note"
            type="note"
            class="alert alert-info"
            description="PLG_QUIZTOOLS_BLANK_FIELD_NOTE_DESC"
        />

        <field
            name="question_options"
            type="subform"
            label="PLG_QUIZTOOLS_BLANK_FIELD_QUESTION_OPTIONS_LABEL"
            multiple="true"
            min="1"
            max="100"
            layout="joomla.form.field.subform.repeatable-table"
        >
            <form>
                <field
                    name="ordering"
                    type="number"
                    default="1"
                    label="PLG_QUIZTOOLS_BLANK_FIELD_QUESTION_OPTIONS_ORDERING_LABEL"
                    min="1"
                    max="100"
                    step="1"
                />

                <field
                    addfieldprefix="Qt\Plugin\Quiztools\Blank\Field"
                    name="answers"
                    type="answers"
                    label="PLG_QUIZTOOLS_BLANK_FIELD_QUESTION_OPTIONS_ANSWERS_LABEL"
                    multiple="true"
                />

                <field
                    name="points"
                    type="number"
                    label="PLG_QUIZTOOLS_BLANK_FIELD_QUESTION_OPTIONS_POINTS_LABEL"
                    default="0"
                    min="0"
                    step="0.01"
                />

                <field
                    name="css_class"
                    type="text"
                    label="PLG_QUIZTOOLS_BLANK_FIELD_QUESTION_OPTIONS_CSS_CLASS_LABEL"
                    description="PLG_QUIZTOOLS_BLANK_FIELD_QUESTION_OPTIONS_CSS_CLASS_DESC"
                />
            </form>
        </field>

        <field
            name="distractors"
            type="tagify"
            label="PLG_QUIZTOOLS_BLANK_FIELD_DISTRACTORS_LABEL"
            description="PLG_QUIZTOOLS_BLANK_FIELD_DISTRACTORS_DESC"
            table="#__quiztools_questions_blank"
            key="question_id"
            field="distractors"
        />
    </fieldset>
</form>
