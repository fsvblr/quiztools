<form>
    <field
        name="type"
        type="radio"
        label="COM_QUIZTOOLS_LPATH_FIELD_ITEM_TYPE_LABEL"
        default="q"
    >
        <option value="q">COM_QUIZTOOLS_LPATH_FIELD_ITEM_TYPE_OPTION_QUIZ</option>
        <option value="a">COM_QUIZTOOLS_LPATH_FIELD_ITEM_TYPE_OPTION_ARTICLE</option>
    </field>

    <field
        name="quiz_id"
        type="quizzeslist"
        label="COM_QUIZTOOLS_LPATH_FIELD_ITEM_QUIZ_ID_LABEL"
        default="0"
        class="form-select"
        showon="type:q"
    >
        <option value="0">COM_QUIZTOOLS_LPATH_FIELD_ITEM_QUIZ_ID_OPTION_SELECT</option>
    </field>

    <field
        name="article_id"
        type="articleslist"
        label="COM_QUIZTOOLS_LPATH_FIELD_ITEM_ARTICLE_ID_LABEL"
        default="0"
        class="form-select"
        showon="type:a"
    >
        <option value="0">COM_QUIZTOOLS_LPATH_FIELD_ITEM_ARTICLE_ID_OPTION_SELECT</option>
    </field>

    <field
        name="min_time_article"
        type="number"
        label="COM_QUIZTOOLS_LPATH_FIELD_ITEM_MIN_TIME_ARTICLE_LABEL"
        description="COM_QUIZTOOLS_LPATH_FIELD_ITEM_MIN_TIME_ARTICLE_DESC"
        default="5"
        min="1"
        max="86400"
        step="1"
        showon="type:a"
    />

    <field
        name="show_desc"
        type="radio"
        label="COM_QUIZTOOLS_LPATH_FIELD_ITEM_SHOW_DESC_LABEL"
        layout="joomla.form.field.radio.switcher"
        default="0"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
        name="unique_id"
        type="hidden"
        default=""
    />
</form>