<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Qt\Component\Quiztools\Administrator\Field">
    <fieldset name="question">
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            readonly="true"
            class="readonly"
        />

        <field
            name="quiz_id"
            type="quizzeslist"
            label="COM_QUIZTOOLS_QUESTION_FIELD_QUIZ_ID_LABEL"
            default="0"
        />

        <field
            name="catid"
            type="categoryedit"
            label="JCATEGORY"
            description="COM_QUIZTOOLS_QUESTION_FIELD_CATID_DESC"
            extension="com_quiztools.question"
            addfieldprefix="Joomla\Component\Categories\Administrator\Field"
            required="true"
            default=""
            allowAdd="true"
            customPrefix="#new#"
        />

        <field
            name="type"
            type="questiontype"
            label="COM_QUIZTOOLS_QUESTION_FIELD_TYPE_LABEL"
            default=""
            required="true"
        />

        <field
            name="text"
            type="editor"
            label="COM_QUIZTOOLS_QUESTION_FIELD_TEXT_LABEL"
            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak,module,article,fields,contact,menu"
            height="430"
            required="true"
        />

        <field
            name="attempts"
            type="number"
            label="COM_QUIZTOOLS_QUESTION_FIELD_ATTEMPTS_LABEL"
            description="COM_QUIZTOOLS_QUESTION_FIELD_ATTEMPTS_DESC"
            default="0"
            min="0"
            max="9999"
            step="1"
        />

        <field
            name="points"
            type="number"
            label="COM_QUIZTOOLS_QUESTION_FIELD_POINTS_LABEL"
            default="0"
            min="0"
            step="0.01"
        />

        <field
            name="penalty"
            type="number"
            label="COM_QUIZTOOLS_QUESTION_FIELD_PENALTY_LABEL"
            description="COM_QUIZTOOLS_QUESTION_FIELD_PENALTY_DESC"
            default="0"
            min="0"
            max="100"
            step="1"
            showon="attempts!:0"
        />
    </fieldset>

    <fieldset name="feedback">
        <field
            name="feedback"
            type="radio"
            label="COM_QUIZTOOLS_QUESTION_FIELD_FEEDBACK_LABEL"
            description="COM_QUIZTOOLS_QUESTION_FIELD_FEEDBACK_DESC"
            layout="joomla.form.field.radio.switcher"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="feedback_msg_right"
            type="editor"
            label="COM_QUIZTOOLS_QUESTION_FIELD_FEEDBACK_MSG_RIGHT_LABEL"
            description="COM_QUIZTOOLS_QUESTION_FIELD_FEEDBACK_MSG_RIGHT_DESC"
            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak,module,article,fields,contact,menu"
            showon="feedback:1"
            height="250"
        />

        <field
            name="feedback_msg_wrong"
            type="editor"
            label="COM_QUIZTOOLS_QUESTION_FIELD_FEEDBACK_MSG_WRONG_LABEL"
            description="COM_QUIZTOOLS_QUESTION_FIELD_FEEDBACK_MSG_WRONG_DESC"
            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak,module,article,fields,contact,menu"
            showon="feedback:1"
            height="250"
        />
    </fieldset>

    <fieldset name="publish">
        <field
            name="state"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            default="1"
            validate="options"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="ordering"
            type="ordering"
            label="JFIELD_ORDERING_LABEL"
            table="#__quiztools_questions"
        />

        <field
            name="created"
            type="hidden"
            filter="unset"
        />

        <field
            name="created_by"
            type="hidden"
            filter="unset"
        />

        <field
            name="modified"
            type="hidden"
            filter="unset"
        />

        <field
            name="modified_by"
            type="hidden"
            filter="unset"
        />

        <field
            name="checked_out"
            type="hidden"
            filter="unset"
        />

        <field
            name="checked_out_time"
            type="hidden"
            filter="unset"
        />
    </fieldset>
</form>
