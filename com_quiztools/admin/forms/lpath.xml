<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Qt\Component\Quiztools\Administrator\Field">
    <fieldset name="lpath">
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            readonly="true"
            class="readonly"
        />

        <field
            name="title"
            type="text"
            label="COM_QUIZTOOLS_LPATH_FIELD_TITLE_LABEL"
            required="true"
        />

        <field
            name="alias"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
        />

        <field
            name="catid"
            type="categoryedit"
            label="JCATEGORY"
            description="COM_QUIZTOOLS_LPATH_FIELD_CATID_DESC"
            extension="com_quiztools.lpath"
            addfieldprefix="Joomla\Component\Categories\Administrator\Field"
            required="true"
            default=""
            allowAdd="true"
            customPrefix="#new#"
        />

        <field
            name="description"
            type="editor"
            label="JGLOBAL_DESCRIPTION"
            description="COM_QUIZTOOLS_LPATH_FIELD_DESCRIPTION_DESC"
            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
            buttons="true"
            hide="pagebreak,module,article,fields,contact,menu"
        />

        <field
            name="type_access"
            type="list"
            label="COM_QUIZTOOLS_LPATH_FIELD_TYPE_ACCESS_LABEL"
            description="COM_QUIZTOOLS_LPATH_FIELD_TYPE_ACCESS_DESC"
            default="0"
            validate="options"
        >
            <option value="0">COM_QUIZTOOLS_LPATH_FIELD_TYPE_ACCESS_OPTION_FREE</option>
            <option value="1">COM_QUIZTOOLS_LPATH_FIELD_TYPE_ACCESS_OPTION_PAID</option>
        </field>

        <field
            name="show_progressbar"
            type="radio"
            label="COM_QUIZTOOLS_LPATH_FIELD_SHOW_PROGRESSBAR_LABEL"
            layout="joomla.form.field.radio.switcher"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="lpath_items"
            type="subform"
            label="COM_QUIZTOOLS_LPATH_FIELD_LPATH_ITEMS_LABEL"
            description="COM_QUIZTOOLS_LPATH_FIELD_LPATH_ITEMS_DESC"
            formsource="administrator/components/com_quiztools/forms/lpath_items.xml"
            multiple="true"
        />
    </fieldset>

    <fieldset name="publish">
        <field
            name="state"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            default="1"
            validate="options"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="asset_id"
            type="hidden"
            filter="unset"
        />

        <field
            name="ordering"
            type="ordering"
            label="JFIELD_ORDERING_LABEL"
            table="#__quiztools_lpaths"
        />

        <field
            name="created"
            type="calendar"
            label="COM_QUIZTOOLS_LPATH_FIELD_CREATED_LABEL"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field
            name="created_by"
            type="user"
            label="COM_QUIZTOOLS_LPATH_FIELD_CREATED_BY_LABEL"
            validate="UserId"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="readonly"
            readonly="true"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"
            validate="UserId"
        />

        <field
            name="checked_out"
            type="hidden"
            filter="unset"
        />

        <field
            name="checked_out_time"
            type="hidden"
            filter="unset"
        />

        <field
            name="access"
            type="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="COM_QUIZTOOLS_LPATH_FIELD_ACCESS_DESC"
            filter="UINT"
            validate="options"
        />
    </fieldset>

    <fieldset name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
        <field
            name="metatitle"
            type="text"
            label="COM_QUIZTOOLS_LPATH_FIELD_METATITLE_LABEL"
        />

        <field
            name="metakey"
            type="textarea"
            label="JFIELD_META_KEYWORDS_LABEL"
            rows="3"
            cols="30"
        />

        <field
            name="metadesc"
            type="textarea"
            label="JFIELD_META_DESCRIPTION_LABEL"
            rows="3"
            cols="30"
            maxlength="300"
            charcounter="true"
        />
    </fieldset>
</form>
