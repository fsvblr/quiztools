<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Qt\Component\Quiztools\Administrator\Field">
	<fields name="filter">
		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_QUIZTOOLS_RESULTS_FILTER_SEARCH_LABEL"
			description="COM_QUIZTOOLS_RESULTS_FILTER_SEARCH_DESC"
			hint="COM_QUIZTOOLS_RESULTS_FILTER_SEARCH_HINT"
		/>

		<field
			name="user_id"
			type="usersresultslist"
			label="COM_QUIZTOOLS_RESULTS_FILTER_USER_ID_LABEL"
			default=""
			layout="joomla.form.field.list-fancy-select"
		>
			<option value="">COM_QUIZTOOLS_RESULTS_FILTER_USER_ID_OPTION_SELECT</option>
			<option value="0">COM_QUIZTOOLS_RESULTS_FILTER_USER_ID_OPTION_GUEST</option>
		</field>

		<field
			name="quiz_id"
			type="quizzeslist"
			label="COM_QUIZTOOLS_RESULTS_FILTER_QUIZ_ID_LABEL"
			default=""
			class="js-select-submit-on-change"
			layout="joomla.form.field.list-fancy-select"
		>
			<option value="">COM_QUIZTOOLS_RESULTS_FILTER_QUIZ_ID_OPTION_SELECT</option>
		</field>

		<field
			name="passed"
			type="list"
			label="COM_QUIZTOOLS_RESULTS_FILTER_PASSED_LABEL"
			default=""
			class="js-select-submit-on-change"
		>
			<option value="">COM_QUIZTOOLS_RESULTS_FILTER_PASSED_OPTION_SELECT</option>
			<option value="1">COM_QUIZTOOLS_RESULTS_FILTER_PASSED_OPTION_PASSED</option>
			<option value="0">COM_QUIZTOOLS_RESULTS_FILTER_PASSED_OPTION_FAILED</option>
		</field>

		<field
			name="from"
			type="calendar"
			label="COM_QUIZTOOLS_RESULTS_FILTER_FROM_LABEL"
			class="js-select-submit-on-change"
			filter="none"
			singleheader="false"
			todaybutton="false"
			weeknumbers="false"
		/>

		<field
			name="to"
			type="calendar"
			label="COM_QUIZTOOLS_RESULTS_FILTER_TO_LABEL"
			class="js-select-submit-on-change"
			filter="none"
			singleheader="false"
			todaybutton="false"
			weeknumbers="false"
		/>
	</fields>
</form>
