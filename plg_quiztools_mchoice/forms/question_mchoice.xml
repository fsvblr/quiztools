<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Qt\Component\Quiztools\Administrator\Field">
    <fieldset name="basic">
        <field
            name="shuffle_answers"
            type="radio"
            label="PLG_QUIZTOOLS_MCHOICE_FIELD_SHUFFLE_ANSWERS_LABEL"
            layout="joomla.form.field.radio.switcher"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <fieldset name="options">
        <field
            name="question_options"
            type="subform"
            label="PLG_QUIZTOOLS_MCHOICE_FIELD_QUESTION_OPTIONS_LABEL"
            multiple="true"
            min="1"
            max="100"
        >
            <form>
                <field
                    name="option"
                    type="editor"
                    label="PLG_QUIZTOOLS_MCHOICE_OPTIONS_FIELD_OPTION_LABEL"
                    filter="\Joomla\CMS\Component\ComponentHelper::filterText"
                    buttons="true"
                    hide="readmore,pagebreak,module,article,fields,contact,menu"
                    height="200"
                    required="true"
                />

                <field
                    name="is_correct"
                    type="radio"
                    label="PLG_QUIZTOOLS_MCHOICE_OPTIONS_FIELD_IS_CORRECT_LABEL"
                    description="PLG_QUIZTOOLS_MCHOICE_OPTIONS_FIELD_IS_CORRECT_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="points"
                    type="number"
                    label="PLG_QUIZTOOLS_MCHOICE_OPTIONS_FIELD_POINTS_LABEL"
                    default="0"
                    min="0"
                    step="0.01"
                />

                <field
                    name="feedback_msg"
                    type="editor"
                    label="PLG_QUIZTOOLS_MCHOICE_OPTIONS_FIELD_FEEDBACK_MSG_LABEL"
                    description="PLG_QUIZTOOLS_MCHOICE_OPTIONS_FIELD_FEEDBACK_MSG_DESC"
                    filter="\Joomla\CMS\Component\ComponentHelper::filterText"
                    buttons="true"
                    hide="readmore,pagebreak,module,article,fields,contact,menu"
                    height="200"
                />
            </form>
        </field>
    </fieldset>
</form>
