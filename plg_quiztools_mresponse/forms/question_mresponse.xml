<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Qt\Component\Quiztools\Administrator\Field">
    <fieldset name="basic">
        <field
            name="shuffle_answers"
            type="radio"
            label="PLG_QUIZTOOLS_MRESPONSE_FIELD_SHUFFLE_ANSWERS_LABEL"
            layout="joomla.form.field.radio.switcher"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="partial_score"
            type="radio"
            label="PLG_QUIZTOOLS_MRESPONSE_FIELD_PARTIAL_SCORE_LABEL"
            layout="joomla.form.field.radio.switcher"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <fieldset name="feedback">
        <field
            name="note_feedback"
            type="note"
            default=""
            label=""
            description="PLG_QUIZTOOLS_MRESPONSE_FIELD_NOTE_FEEDBACK_DESC"
            showon="partial_score:0[OR]feedback:0"
        />

        <field
            name="feedback_partial_score"
            type="editor"
            label="PLG_QUIZTOOLS_MRESPONSE_FIELD_FEEDBACK_PARTIAL_SCORE_LABEL"
            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak,module,article,fields,contact,menu"
            height="250"
            showon="partial_score:1[AND]feedback:1"
        />
    </fieldset>

    <fieldset name="options">
        <field
            name="question_options"
            type="subform"
            label="PLG_QUIZTOOLS_MRESPONSE_FIELD_QUESTION_OPTIONS_LABEL"
            multiple="true"
            min="1"
            max="100"
        >
            <form>
                <field
                    name="option"
                    type="editor"
                    label="PLG_QUIZTOOLS_MRESPONSE_OPTIONS_FIELD_OPTION_LABEL"
                    filter="\Joomla\CMS\Component\ComponentHelper::filterText"
                    buttons="true"
                    hide="readmore,pagebreak,module,article,fields,contact,menu"
                    height="200"
                    required="true"
                />

                <field
                    name="is_correct"
                    type="radio"
                    label="PLG_QUIZTOOLS_MRESPONSE_OPTIONS_FIELD_IS_CORRECT_LABEL"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="points"
                    type="number"
                    label="PLG_QUIZTOOLS_MRESPONSE_OPTIONS_FIELD_POINTS_LABEL"
                    default="0"
                    min="0"
                    step="0.01"
                />
            </form>
        </field>
    </fieldset>
</form>
